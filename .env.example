# Copy to .env and adjust as needed

OPENRAG_ENVIRONMENT=dev
OPENRAG_DATA_DIR=./data
OPENRAG_DEFAULT_DATASET=default

# Chroma
OPENRAG_CHROMA_PERSIST_DIR=./.chroma
OPENRAG_CHROMA_COLLECTION=openrag-default
OPENRAG_CHROMA_HOST=
OPENRAG_CHROMA_PORT=8000
OPENRAG_CHROMA_SSL=false

# Embeddings
OPENRAG_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
OPENRAG_EMBEDDING_DIM=384
OPENRAG_USE_MODEL_EMBEDDINGS=false

# Generation
OPENRAG_GENERATOR_MODEL=Qwen/Qwen2.5-1.8B-Instruct
OPENRAG_GENERATOR_MAX_NEW_TOKENS=512
OPENRAG_GENERATOR_TEMPERATURE=0.3
OPENRAG_USE_MODEL_GENERATOR=false

# Chunking
OPENRAG_MAX_CHUNKS=5
OPENRAG_CHUNK_SIZE=600
OPENRAG_CHUNK_OVERLAP=100
OPENRAG_USE_TOKEN_SPLITTER=false
OPENRAG_TOKENS_PER_CHUNK=256
OPENRAG_TOKEN_OVERLAP=50

# Retrieval reranking
OPENRAG_RETRIEVAL_RERANK_LEXICAL=false
OPENRAG_CROSS_ENCODER_USE=false
OPENRAG_CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
OPENRAG_CROSS_ENCODER_TOP_N=10
OPENRAG_CROSS_ENCODER_DEVICE=

# Upload safety
OPENRAG_ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.md,.html,.htm
OPENRAG_MAX_FILES=12
OPENRAG_MAX_UPLOAD_SIZE_MB=25
OPENRAG_MAX_TOTAL_UPLOAD_MB=100

# Optional MIME allowlist (JSON mapping ext->mimes). Leave empty to use defaults.
# Example: {".pdf": ["application/pdf"], ".txt": ["text/plain", "application/octet-stream"]}
OPENRAG_ALLOWED_MIME_JSON=

# CORS (comma-separated list)
OPENRAG_CORS_ALLOW_ORIGINS=
OPENRAG_CORS_ALLOW_CREDENTIALS=false

# Security
OPENRAG_API_KEY=
OPENRAG_RATE_LIMIT_REQUESTS=120
OPENRAG_RATE_LIMIT_WINDOW_SECONDS=60

# Remote ingestion
OPENRAG_ALLOWED_INGEST_DOMAINS=
OPENRAG_MAX_DOWNLOAD_SIZE_MB=25

# Evaluation thresholds
OPENRAG_EVALUATION_MIN_RECALL=0.5
OPENRAG_EVALUATION_MIN_MRR=0.5
